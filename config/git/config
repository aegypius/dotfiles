[core]
	attributesfile = ~/.gitattributes
[color]
	diff = true
	log = auto
	branches = auto
	status = true
	pager = true
	interactive = true
	branch = true
[init]
	templatedir = ~/.config/git/skeletons
[alias]
	st = status
	co = checkout
	d = diff
	a = add
	cp = cherry-pick
	fix = commit -p --fixup
	up = pull --rebase --autostash
[achievement]
	upload = true
[push]
	default = upstream
[merge]
	tool = meld
	renamelimit = 5000
[diff]
	tool = meld
[log]
	abbrevCommit = false
	decorate = short
[rebase]
	autosquash = true
[gitflow "release"]
	notag = true
[gitflow "hotfix.finish"]
	notag = true
[url "git@github.com:"]
	insteadOf = "gh:"
[url "git@bitbucket.org:"]
	insteadOf = "bb:"
